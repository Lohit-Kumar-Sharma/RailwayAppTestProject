<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgtrack"

    tools:context="lohitprojects.railwayapptestproject.pnrScreen1">

    <EditText
        android:id="@+id/enteredpnr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="163dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:fontFamily="@font/asap"
        android:hint="Enter PNR number here..."
        android:inputType="number"
        android:padding="10dp"
        android:textColor="@android:color/holo_orange_light" />

    <Button
        android:id="@+id/checkpnrstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/enteredpnr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:background="@drawable/rounded_edittext"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="@font/asap"
        android:padding="10dp"
        android:text="Check Status"
        android:textSize="18sp" />



    <!-- view for AdMob Banner Ad -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />

</RelativeLayout>
