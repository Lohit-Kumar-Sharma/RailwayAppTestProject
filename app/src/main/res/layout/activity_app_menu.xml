<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="lohitprojects.railwayapptestproject.AppMenu">

    <!-- view for AdMob Banner Ad -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_marginRight="2.5dp"
                android:layout_weight=".50"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="@android:color/background_dark"
                android:text="Date"
                android:textAlignment="center"
                android:textColor="@android:color/background_light" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_marginLeft="2.5dp"
                android:layout_weight=".50"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="@android:color/background_dark"
                android:text="TIme"
                android:textAlignment="center"
                android:textColor="@android:color/background_light" />


        </LinearLayout>

        <Button
            android:id="@+id/livetrainstatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_edittext"
            android:backgroundTint="@android:color/holo_green_light"
            android:padding="10dp"
            android:paddingTop="20dp"
            android:text="Live Train Status"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <Button
            android:id="@+id/trainInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_edittext"
            android:backgroundTint="@android:color/holo_orange_light"
            android:padding="10dp"
            android:text="Check train running days"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <Button
            android:id="@+id/trainRoute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"

            android:background="@drawable/rounded_edittext"
            android:backgroundTint="@android:color/holo_green_light"
            android:padding="10dp"
            android:text="train Route"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <Button
            android:id="@+id/PnrStatusCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"

            android:background="@drawable/rounded_edittext"
            android:backgroundTint="@android:color/holo_orange_light"
            android:padding="10dp"
            android:text="PNR STATUS"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />


        <Button
            android:id="@+id/CancelledtrainInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"

            android:background="@drawable/rounded_edittext"
            android:backgroundTint="@android:color/holo_green_light"
            android:padding="10dp"
            android:text="Cancelled Trains"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <Button
            android:id="@+id/rescheduledtrains"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"

            android:background="@drawable/rounded_edittext"
            android:backgroundTint="@android:color/holo_orange_light"
            android:padding="10dp"
            android:text="Rescheduled Trains"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />


        <Button
            android:id="@+id/booktrainticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"

            android:background="@drawable/rounded_edittext"
            android:backgroundTint="@android:color/holo_green_light"
            android:padding="10dp"
            android:text="Book your Tickets!"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/rateapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"

                android:layout_marginRight="2.5dp"
                android:layout_weight=".50"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="@android:color/holo_orange_light"
                android:padding="10dp"
                android:text="✦ Rate Us! ✦"

                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <Button
                android:id="@+id/shareapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="2dp"
                android:layout_weight="0.50"

                android:background="@drawable/rounded_edittext"
                android:backgroundTint="@android:color/holo_green_light"
                android:text="Share It!"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />

</RelativeLayout>
