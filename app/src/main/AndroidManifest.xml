<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lohitprojects.railwayapptestproject">

    <!-- Include required permissions for Google Mobile Ads to run. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"> <!-- This meta-data tag is required to use Google Play Services. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".splash"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity android:name=".cancelledtrainlist" />
        <activity
            android:name=".TrainInfo"
            android:label="@string/title_activity_main2" />
        <activity
            android:name=".Live_Train_Status"
            android:label="@string/title_activity_live__train__status" />
        <activity
            android:name=".Rescheduled_Trains"
            android:label="@string/title_activity_rescheduled__trains" />
        <activity
            android:name=".Train_Route"
            android:label="@string/title_activity_train__route" />
        <activity
            android:name=".BookTickets"
            android:label="@string/title_activity_book_tickets" />
        <activity
            android:name=".pnrScreen1"
            android:label="@string/title_activity_pnr_screen1" />
        <activity
            android:name=".pnr_screen2"
            android:label="@string/title_activity_pnr_screen2" />
        <activity
            android:name=".AppMenu"
            android:label="@string/title_activity_front" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" />
        <activity android:name=".FRONT"
            android:label="@string/title_activity_front"
            android:theme="@style/AppTheme.NoActionBar"
            >

        </activity>
    </application>

</manifest>